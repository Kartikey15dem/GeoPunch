<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Record_Fragment">

    <!-- TODO: Update blank fragment layout -->
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >


           <!-- Greeting Text -->
           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="36dp"

               android:text="Morning, DAVID"
               android:textColor="@color/white"
               android:textSize="20sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.179"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <!-- Subheading Text -->
           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:text="Let's be productive today"
               android:textColor="@color/white"
               android:textSize="16sp"
               app:layout_constraintStart_toStartOf="@+id/textView3"
               app:layout_constraintTop_toBottomOf="@+id/textView3" />

           <!-- View with Rounded Corners -->

           <!-- Overview Title -->
           <View
               android:id="@+id/view1"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_marginTop="12dp"
               android:background="@drawable/rounded_corners"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView4"
               app:layout_constraintVertical_bias="0.506" />

           <TextView
               android:id="@+id/textView8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:text="Overview"
               android:textSize="20sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.113"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/view1" />

           <!-- Status Texts: Present, Absent, Late -->

           <!-- Date Button -->
       <TextView
           android:id="@+id/textView5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Present"
           android:textSize="16sp"
           app:layout_constraintBottom_toBottomOf="@+id/textView6"
           app:layout_constraintTop_toBottomOf="@+id/textView8"
           app:layout_constraintVertical_bias="1.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/textView6" />

       <TextView
           android:id="@+id/textView6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Absent"
           android:textSize="16sp"
           android:layout_marginTop="10dp"
           app:layout_constraintBottom_toBottomOf="@+id/textView5"
           app:layout_constraintEnd_toStartOf="@+id/textView7"
           app:layout_constraintStart_toEndOf="@+id/textView5"
           app:layout_constraintTop_toBottomOf="@+id/textView8"
           app:layout_constraintVertical_bias="1.0" />

       <TextView
           android:id="@+id/textView7"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Late"
           android:textSize="16sp"
           android:layout_marginTop="10dp"
           app:layout_constraintBottom_toBottomOf="@+id/textView6"
           app:layout_constraintTop_toBottomOf="@+id/textView8"
           app:layout_constraintStart_toEndOf="@+id/textView6"
           app:layout_constraintEnd_toEndOf="parent" />



       <TextView
               android:id="@+id/button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="15dp"
               android:layout_marginTop="16dp"
               android:background="#F2F2F2"
               android:text="August 2024"
               android:textSize="20sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.777"
               app:layout_constraintStart_toEndOf="@+id/textView8"
               app:layout_constraintTop_toTopOf="@+id/view1" />


           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:layout_marginTop="100dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/button" >
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingTop="25dp"
                   android:paddingBottom="25dp">

                   <ImageView
                       android:id="@+id/checkintick"
                       android:layout_width="20sp"
                       android:layout_height="20sp"
                       android:layout_marginTop="16sp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.04"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:srcCompat="@drawable/mdi_tick_circle" />

                   <TextView
                       android:id="@+id/timecheckin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="8sp"
                       android:layout_marginTop="4sp"
                       android:text="8:04  AM"
                       android:textSize="16sp"
                       android:textColor="@color/black"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toEndOf="@+id/checkintick"
                       app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/typecheckin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Automatic Check In"
                       android:textSize="12dp"
                       android:textColor="#666464"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="@+id/timecheckin"
                       app:layout_constraintTop_toBottomOf="@+id/timecheckin" />


                   <androidx.cardview.widget.CardView
                       android:layout_width="150sp"
                       android:layout_height="60sp"
                       android:layout_marginTop="4dp"
                       app:cardBackgroundColor="#EFEFEF"
                       app:cardCornerRadius="15dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.866"
                       app:layout_constraintStart_toEndOf="@+id/checkintick"
                       app:layout_constraintTop_toTopOf="parent">

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="5dp">



                           <TextView
                               android:id="@+id/checkintit"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Check In"
                               android:textSize="16sp"
                               android:textColor="@color/black"
                               android:layout_alignParentTop="true"
                               android:layout_above="@+id/latetext"/>


                           <androidx.cardview.widget.CardView
                               android:id="@+id/latetext"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               app:cardBackgroundColor="#F44E4E"
                               app:cardCornerRadius="10sp"
                               android:layout_alignParentLeft="true"
                               android:layout_alignParentBottom="true"
                               >

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="2dp"
                                   android:text="Late: 5 minutes"
                                   android:textColor="@color/white" />
                           </androidx.cardview.widget.CardView>

                           <ImageView
                               android:layout_width="20sp"
                               android:layout_height="20sp"
                               android:layout_alignParentRight="true"
                               android:layout_toRightOf="@+id/latetext"
                               app:srcCompat="@drawable/rectangle"
                               tools:layout_editor_absoluteX="365dp"
                               tools:layout_editor_absoluteY="16dp" />
                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>

                   <View
                       android:id="@+id/line"
                       android:layout_width="2dp"
                       android:layout_height="80dp"
                       android:background="#858282"
                       app:layout_constraintEnd_toEndOf="@+id/checkintick"
                       app:layout_constraintStart_toStartOf="@+id/checkintick"
                       app:layout_constraintTop_toBottomOf="@+id/checkintick" />


                   <ImageView
                       android:layout_width="20sp"
                       android:layout_height="20sp"
                       app:layout_constraintEnd_toEndOf="@+id/line"
                       app:layout_constraintStart_toStartOf="@+id/line"
                       app:layout_constraintTop_toBottomOf="@+id/line"
                       app:srcCompat="@drawable/mdi_tick_circle" />

               </androidx.constraintlayout.widget.ConstraintLayout>




           </androidx.cardview.widget.CardView>




   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>